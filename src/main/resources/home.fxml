<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.HomeController"
            prefHeight="300.0" prefWidth="400.0">
    <children>
        <Label text="Welcome to JavaFX!" layoutX="140" layoutY="100"/>
    </children>

    <VBox spacing="10" alignment="CENTER">
        <Label text="Home Screen"/>
        <Button text="Go to User List" onAction="#switchToMemberList"/>
        <Button text="Go to Subscription List" onAction="#switchToSubscriptionList"/>
        <Button text="Go to Payment List" onAction="#switchToPaymentList"/>
    </VBox>
</AnchorPane>
